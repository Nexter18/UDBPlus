    <!-- Call to action-->

    <section class="page-section" id="contact">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h2 class="mt-0">¡Contáctanos!</h2>

                    <p class="text-muted mb-5"></p>
                    @using (Html.BeginForm("SaveInfo", "HomeController", FormMethod.Post))
                    {

                        <!-- Contact-->




                <form>
                    <!-- Name input -->
                    <div class="form-outline mb-4">
                        <input type="text" id="form4Example1" class="form-control" />
                        <label class="form-label" for="form4Example1">Nombre completo</label>
                    </div>

                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input type="email" id="form4Example2" class="form-control" />
                        <label class="form-label" for="form4Example2">Correo Electrónico</label>
                    </div>

                    <!-- Message input -->
                    <div class="form-outline mb-4">
                        <textarea class="form-control" id="form4Example3" rows="4"></textarea>
                        <label class="form-label" for="form4Example3">Mensaje (Felicitación, Consulta de inscripción, otra) </label>
                    </div>


                    @*<div class="form-outline mb-4">
                    </div>*@



    <!-- Submit button -->
                        <button type="submit" class="btn btn-success btn-block mb-4">Send</button>
                </form>

                    }


                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 ml-auto text-center mb-5 mb-lg-0">
                    <i class="fas fa-phone fa-3x mb-3 text-muted"></i>
                    <div>(503) 2251-8241</div>
                </div>
                <div class="col-lg-4 mr-auto text-center">
                    <i class="fas fa-envelope fa-3x mb-3 text-muted"></i>
                    <!-- Make sure to change the email address in BOTH the anchor text and the link target below!-->
                    <a class="d-block" href="mailto:nuevo.ingreso@udb.edu.sv">nuevo.ingreso@udb.edu.sv</a>
                </div>
            </div>
        </div>
    </section>


















